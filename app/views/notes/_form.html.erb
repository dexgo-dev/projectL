<%= simple_form_for([@participant,@note]) do |f| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group">
      <%= f.text_area :note_text, hide_label: true, class: 'sticky_editor' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-4">
      <%= f.check_box :notify, data: { toggle: 'toggle', on: 'Notify On', onstyle: 'primary', off: 'Notify Off', offstyle: 'default', width: '100'}, label: '' %><br />
      <%= f.input :notify_on, as:"datetime_picker", label:''  %>
    </div>

    <div class="form-group col-xs-2">
      <%= f.check_box :important, data: { toggle: 'toggle', on: 'Important', onstyle: 'danger', off: 'Not Important', offstyle: 'default', width: '120'}, label: '' %>&nbsp;
    </div>
  </div>

  <div class="row">
    <div class="actions col-xs-6" align="center">
      <%= f.submit "Save Note", class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
