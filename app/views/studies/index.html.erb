<p id="notice"><%= notice %></p>

<h1>Studies</h1>
<p>
<%= link_to 'Home', user_home_path(@current_user) %>&nbsp;|&nbsp;
<%= link_to 'Add New Study', new_study_path %>&nbsp;|&nbsp;
<%= link_to 'See All Paticipants', participants_path %>
</p>
<p>
<table>
  <thead>
    <tr>
      <th>Study name</th>
      <th>Description</th>
      <% if @current_user.isAdmin? %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @studies.each do |study| %>
      <tr>
        <td><%= study.study_name %></td>
        <td><%= study.description %></td>
        <td><%= link_to 'Show', study %></td>
        <td><%= link_to 'Edit', edit_study_path(study) %></td>
        <% if @current_user.isAdmin? %>
          <td><%= link_to 'Destroy', study, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</p>
