<p id="notice"><%= notice %></p>

<h1>Studies</h1>
<p>
<% if @studies.nil? || @studies.empty? %>
  <h2>No Studies Yet!</h2>
<% else %>
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Study name</th>
        <th>Description</th>
        <% if @current_user && @current_user.isAdmin? %>
          <th></th>
        <% end %>
        <% if false && @current_user && @current_user.isAdmin? # Disable all deletions of Study and Teams %>
          <th></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @studies.each do |study| %>
        <tr>
          <td><%= link_to study.study_name, study %></td>
          <td><%= study.description %></td>
          <td><%= link_to 'Edit', edit_study_path(study) %></td>
          <% if false && @current_user && @current_user.isAdmin? # Disable all deletions of Study and Teams %>
            <td><%= link_to 'Destroy', study, method: :delete, data: { confirm: 'Are you sure?' } if @current_user.isAdmin %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
</p>
